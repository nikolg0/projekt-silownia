<div class="container">
  <h2>Lista produktów</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Nazwa</th>
        <th>Cena</th>
        <th>Waga</th>
        <th>Ilość</th>
        <th>Opis</th>
        <th>Obrazek</th>
        <th>Usuń</th>
        <th>Edytuj</th>
      </tr>
    </thead>

    <tbody>
      {{#each products}}
        <tr>
          <td class="uploadtd">{{name}}</td>
          <td>{{price}} zł</td>
          <td>{{weight.value}} {{this.weight.unit}}</td>
          <td>{{quantity}}</td>
          <td class="uploadtd">{{description}}</td>
          <td class="uploadtd"><img src="/uploads/{{images}}" /></td>
          <td> <a href="/dashboard/produkty/usuwanie/{{_id}}">Usuń</a></td>
          <td> <a href="/dashboard/produkty/edytuj/{{_id}}">Edytuj</a></td>
        </tr>
      {{/each}}
    </tbody>
  </table>

  <a class="btn btn-primary" href="/dashboard/produkty/dodaj">Dodaj produkt</a>
</div>