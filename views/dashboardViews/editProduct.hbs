<h1>Edycja produktu {{product.name}}</h1>

<form
  action="/dashboard/produkty/edytuj/{{_id}}"
  enctype="multipart/form-data"
  method="POST"
>
  <label for="name">Nazwa</label><br />
  <input type="text" id="name" name="name" value={{name}} required />
  <br /><br />
  <label for="name">Cena</label><br />
  <input type="text" id="price" name="price" value={{price}} required />
  <br /><br />
  <label for="name">Waga</label><br />
  <input
    type="text"
    id="weight"
    name="weight"
    value={{weight.value}}
    required
  />
  <select name="unit">
    <option value="g">Gram</option>
    <option value="kg">Kilogram</option>
    <option value="ml">Mililitr</option>
  </select>
  <br /><br />
  <label for="name">Ilość</label><br />
  <input
    type="text"
    id="quantity"
    name="quantity"
    value={{quantity}}
    required
  />
  <br /><br />
  <input type="text" id="description" name="description" required />
  <br /><br />
  <input type="file" id="image" name="image" multiple required />
  <br /><br />
  <button type="submit">Zakończ edycję</button>
</form>